{
  "name": "swtc",
  "version": "0.3.4",
  "description": "Secrets Within the Compound Game",
  "main": "./server/server.js",
  "scripts": {
    "start": "node ./server/src/server.js",
    "server": "cd server && nodemon ./src/server.js",
    "client": "npm --prefix ./server run dev",
    "build": "npm --prefix ./client run build",
    "test": "cd test && npx playwright test",
    "uitest": "cd test && npx playwright test --ui",
    "report": "cd test && npx playwright show-report"
  },
